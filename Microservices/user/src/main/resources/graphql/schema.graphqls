type Query {
    userByEmail(email: String): UserMail
    getUser(id: ID): User
}

type Mutation {
    createUser(email: String!, password: String!, name: String!): User!
    loginUser(email: String!, password: String!): String!
    updateUser(userId: ID!, password: String, name: String)
}

type User {
    userId: ID!
    userMail: String!
    userName: String!
    userPassword: String!
}

type UserMail {
    userMail: String!
    userId: ID!
}